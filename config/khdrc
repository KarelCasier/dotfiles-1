# Launch terminal
cmd - return          : open -na /Applications/Hyper.app

# Launch app manager
cmd - space           : open /Applications/Alfred\ 3.app

# Launch password manager
cmd + alt - z         : ~/.khd/pass.applescript
cmd + alt - y         : ~/.khd/pass.applescript

# Launch process manager
cmd + alt - x         : ~/.khd/pkill.applescript

# Launch clipboard manager
cmd + alt - c         : khd -p "cmd + alt - c"

# Launch music manager
cmd + alt - v         : ~/.khd/spotify.applescript

# Restart khd
cmd - escape          : khd -e "reload"

# Restart window manager
# cmd + alt + ctrl + shift - escape  :    brew services restart kwm

# Lock screen
cmd - e               : pmset displaysleepnow

# # Close window
# cmd - w  ![Firefox] : khd -p "cmd - w"
# cmd - w   [Firefox] : khd -p "cmd + shift - w"

# # Quit application
# cmd + shift - w     : khd -p "cmd - q"

# Set space tiled
cmd - t               : chunkc space -l bsp

# Set space monocle
cmd - m               : chunkc space -l monocle

# Toggle window fullscreen
cmd - f               : chunkc window -t fullscreen

# Toggle window floating
cmd - s               : chunkc window -t float

# Give Focus To Window
cmd - h               : chunkc window -f west
cmd - l               : chunkc window -f east
cmd - j               : chunkc window -f south
cmd - k               : chunkc window -f north

# Move window
cmd + shift - h       : chunkc window -w west
cmd + shift - j       : chunkc window -w south
cmd + shift - k       : chunkc window -w north
cmd + shift - l       : chunkc window -w east

# Resize windows
cmd + alt - h         : chunkc window -r 0.05 -e west
cmd + alt - j         : chunkc window -r 0.05 -e south
cmd + alt - k         : chunkc window -r 0.05 -e north
cmd + alt - l         : chunkc window -r 0.05 -e east
cmd + alt + shift - h : chunkc window -r -0.05 -e west
cmd + alt + shift - j : chunkc window -r -0.05 -e south
cmd + alt + shift - k : chunkc window -r -0.05 -e north
cmd + alt + shift - l : chunkc window -r -0.05 -e east

# Sebd window to desktop
cmd + shift - 0x12    : chunkc window -d 1
cmd + shift - 0x13    : chunkc window -d 2
cmd + shift - 0x14    : chunkc window -d 3
cmd + shift - 0x15    : chunkc window -d 4
cmd + shift - 0x16    : chunkc window -d 5
cmd + shift - 0x17    : chunkc window -d 6

# Move between spaces
cmd - 0x12            : khd -p "ctrl - 0x12"
cmd - 0x13            : khd -p "ctrl - 0x13"
cmd - 0x14            : khd -p "ctrl - 0x14"
cmd - 0x15            : khd -p "ctrl - 0x15"

# Set insertion point
cmd + ctrl - h        : chunkc window -i west
cmd + ctrl - j        : chunkc window -i south
cmd + ctrl - k        : chunkc window -i north
cmd + ctrl - l        : chunkc window -i east
