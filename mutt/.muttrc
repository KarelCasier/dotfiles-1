# Details
set from="tomas.slusny@pantheon.tech"
set realname='Tomas Slusny'
set use_from = yes
set envelope_from = yes

# Use msmtp rathen than sendmail
set sendmail="/usr/bin/msmtp"

# Folders
set spoolfile="/var/spool/mail/vagrant"
set folder="$HOME/mail"
set record="+sent"
set postponed="+postponed"
set mbox_type=mbox
set move=no

set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies

# Watch these mailboxes for new mail, useful only if
# Procmail or Maildrop is used to sort mail.
mailboxes ! +slrn +fetchmail +mutt
set sort_browser=alpha    # Sort mailboxes by alpha(bet)

# Load colorscheme
source $HOME/.mutt/bundle/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc
